{
  "name": "@it-incubator/mdx-components",
  "version": "0.0.3",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "sideEffects": false,
  "files": [
    "/dist",
    "/dist/style.css"
  ],
  "scripts": {
    "build": "vite build && tsc && storybook build",
    "lint:eslint": "eslint \"src/**/*.ts*\"",
    "lint:eslint:fix": "pnpm run lint:eslint --fix",
    "lint:stylelint": "../stylelint-config/node_modules/stylelint/bin/stylelint.mjs \"src/**/*.scss\"",
    "lint:stylelint:fix": "pnpm run lint:stylelint --fix",
    "lint:types": "tsc",
    "lint": "TIMING=1 pnpm run lint:eslint && pnpm run lint:stylelint && pnpm run lint:types",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "storybook dev -p 6007",
    "start": "vite",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@babel/core": "7.22.20",
    "@fontsource/roboto": "5.0.8",
    "@it-incubator/eslint-config": "workspace:*",
    "@it-incubator/prettier-config": "workspace:*",
    "@it-incubator/stylelint-config": "workspace:*",
    "@mdx-js/react": "2.3.0",
    "@storybook/addon-actions": "7.4.4",
    "@storybook/addon-docs": "7.4.4",
    "@storybook/addon-essentials": "7.4.4",
    "@storybook/addon-interactions": "7.4.4",
    "@storybook/addon-links": "7.4.4",
    "@storybook/addons": "^7.4.4",
    "@storybook/blocks": "7.4.4",
    "@storybook/react": "7.4.4",
    "@storybook/react-vite": "7.4.4",
    "@storybook/testing-library": "0.2.1",
    "@storybook/theming": "7.4.4",
    "@types/react": "18.2.22",
    "@types/react-datepicker": "4.15.0",
    "@types/react-dom": "18.2.7",
    "@vitejs/plugin-react": "4.0.4",
    "babel-loader": "9.1.3",
    "concurrently": "8.2.1",
    "esbuild-sass-plugin": "2.15.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "remark-gfm": "3.0.1",
    "sass": "1.68.0",
    "storybook": "7.4.4",
    "typescript": "5.2.2",
    "vite": "4.4.9"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@radix-ui/react-scroll-area": "1.0.4",
    "@radix-ui/react-tabs": "1.0.4",
    "@types/node": "20.6.4",
    "clsx": "2.0.0",
    "loki": "^0.32.0",
    "mdx-bundler": "^9.2.1"
  },
  "peerDependencies": {
    "react": ">=18.0.2",
    "react-dom": ">=18.0.2"
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.app",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false
      },
      "chrome.iphone7": {
        "target": "chrome.app",
        "preset": "iPhone 7"
      }
    }
  }
}
